<div class="container">

  <div class="d-flex flex-column justify-content-around h-100">

    <div class="navbar-choice">
      <div class="d-flex justify-content-between">
        <%= link_to root_path do %>
          <i class="fas fa-home"></i>
        <% end %>
        <div class="edit-title text-center">
          <p>SÃ©lectionne ta playlist</p>
        </div>
      </div>
    </div>

    <div class="edit">
      <%= simple_form_for @game do |f| %>
        <div class="playlist_grid">
          <% @playlists.each do |playlist| %>
            <div class="playlist_card playlist_image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path playlist.picture %>)"  >
              <%= radio_button_tag 'playlist_id', playlist.id, false, class: "d-none" %>
              <%= label_tag "playlist_id_#{playlist.id}", playlist.name, class: "play-name" %>
            </div>
          <% end %>
        </div>
    </div>
    <div class="pt-3">
      <div class="text-center my-3">
        <%= f.submit "C'EST PARTI !", class: "btn-edit" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
